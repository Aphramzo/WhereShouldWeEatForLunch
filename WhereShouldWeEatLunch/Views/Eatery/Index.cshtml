@model IEnumerable<WhereShouldWeEatLunch.Models.EateryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Eateries</h2>

<p>
    @Html.ActionLink("Add a new place", "Create")
</p>
<table data-role="table" id="myTable" data-mode="reflow">
    <tr>
        <th>
            Walk To
        </th>
        <th>
            Name
        </th>
        <th>
            
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsWalkingDistance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, @class = "actionLinkButton" }, new { data_role = "button", data_mini = "true" })
        </td>  
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "actionLinkButton" }, new { data_role = "button", data_mini = "true" })
        </td>
    
    </tr>
}

</table>
