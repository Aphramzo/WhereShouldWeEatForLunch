@model WhereShouldWeEatLunch.Controllers.EateryController.EateryViewModel

@{
    ViewBag.Title = "Create";
}

<h2>New Joint</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.Eatery.IsWalkingDistance)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Eatery.IsWalkingDistance)
            @Html.ValidationMessageFor(model => model.Eatery.IsWalkingDistance)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Eatery.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Eatery.Name)
            @Html.ValidationMessageFor(model => model.Eatery.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Eatery.FoodStyleModel)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Eatery.FoodStyleModel.Id, Model.Styles)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
